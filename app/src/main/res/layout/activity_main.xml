<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >

        <TextView
            android:id="@+id/a"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff2629ff" />
        <TextView
            android:id="@+id/b"
            android:layout_width="wrap_content"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffa92c"
            android:layout_toEndOf="@+id/a" />
        <TextView
            android:id="@+id/c"
            android:layout_below="@+id/b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:textColor="#ff2629ff" />
        <TextView
            android:id="@+id/d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffa92c"
            android:layout_toEndOf="@+id/c"
            android:paddingBottom="10dp"
            android:layout_below="@+id/b" />
        <TextView
            android:id="@+id/e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffa92c"
            android:paddingBottom="10dp"
            android:layout_below="@+id/d" />
        <TextView
            android:id="@+id/f"
            android:layout_toEndOf="@+id/e"
            android:layout_width="wrap_content"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content"
            android:textColor="#ff2629ff"
            android:layout_below="@+id/d" />
        <TextView
            android:id="@+id/g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffa92c"
            android:layout_toEndOf="@+id/f"
            android:paddingBottom="10dp"
            android:layout_below="@+id/d" />
        <TextView
            android:id="@+id/h"
            android:layout_toEndOf="@+id/g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff2629ff"
            android:paddingBottom="10dp"
            android:layout_below="@+id/d" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/v1"
            android:textColor="#ff2629ff"
            android:paddingBottom="10dp"
            android:layout_below="@+id/e"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/v"
            android:textColor="#ffffa92c"
            android:paddingBottom="10dp"
            android:layout_below="@+id/e"
            android:layout_toEndOf="@+id/v1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v1"
            android:id="@+id/route"
            android:textColor="#ff2629ff"
            android:paddingBottom="10dp"/>
        <TextView
            android:paddingBottom="10dp"
            android:layout_below="@+id/v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r"
            android:textColor="#ffffa92c"
            android:layout_toEndOf="@+id/route"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/route"
            android:id="@+id/rate"
            android:textColor="#ff2629ff"
            />
        <TextView
            android:layout_below="@+id/route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lmr"
            android:textColor="#ffffa92c"
            android:layout_toEndOf="@+id/rate"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rate"
            android:visibility="gone"
            android:inputType="numberSigned"
            android:id="@+id/bid"
            android:gravity="center_horizontal|center"/>

    </RelativeLayout>
    </android.support.v7.widget.CardView>
<Button
    android:id="@+id/submit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="SUBMIT"
    android:paddingBottom="20dp"
    android:layout_gravity="center_horizontal"
    style="@style/AppTheme"
    android:textColor="#ff2629ff" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location"
        android:layout_gravity="center_horizontal" />
</LinearLayout>

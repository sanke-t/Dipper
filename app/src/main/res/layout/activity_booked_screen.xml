<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        android:paddingBottom="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <TextView
                android:id="@+id/shipper"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffff00a9" />
            <TextView
                android:id="@+id/shipper1"
                android:layout_width="wrap_content"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content"
                android:textColor="#ffb900ff"
                android:layout_toEndOf="@+id/shipper" />
            <TextView
                android:id="@+id/material"
                android:layout_below="@+id/shipper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:textColor="#ffff00a9" />
            <TextView
                android:id="@+id/material1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffb900ff"
                android:layout_toEndOf="@+id/material"
                android:paddingBottom="10dp"
                android:layout_below="@+id/shipper" />
            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffff00a9"
                android:paddingBottom="10dp"
                android:layout_below="@+id/material" />
            <TextView
                android:id="@+id/id1"
                android:layout_toEndOf="@+id/id"
                android:layout_width="wrap_content"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content"
                android:textColor="#ffb900ff"
                android:layout_below="@+id/material" />
            <TextView
                android:id="@+id/booking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffff00a9"
                android:layout_below="@+id/id"
                android:paddingBottom="10dp" />
            <TextView
                android:layout_below="@+id/id"
                android:id="@+id/booking1"
                android:layout_toEndOf="@+id/booking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffb900ff"
                android:paddingBottom="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/amount"
                android:textColor="#ffff00a9"
                android:paddingBottom="10dp"
                android:layout_below="@+id/booking"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/amount1"
                android:textColor="#ffb900ff"
                android:paddingBottom="10dp"
                android:layout_below="@+id/booking"
                android:layout_toEndOf="@+id/amount"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/company"
        android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/heading"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:textColor="#ffff00a9"
            android:layout_below="@+id/heading"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffb900ff"
            android:id="@+id/name1"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_toEndOf="@+id/name"
            android:layout_below="@+id/heading"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address"
            android:textColor="#ffff00a9"
            android:paddingBottom="10dp"
            android:layout_below="@+id/name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address1"
            android:paddingBottom="10dp"
            android:textColor="#ffb900ff"
            android:layout_below="@+id/name"
            android:layout_toEndOf="@+id/address"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:textColor="#ffff00a9"
            android:paddingBottom="10dp"
            android:layout_below="@+id/address"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone1"
            android:paddingBottom="10dp"
            android:textColor="#ffb900ff"
            android:layout_below="@+id/address"
            android:layout_toEndOf="@+id/phone"
            android:autoLink="phone"
            android:linksClickable="true"
            />
</RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trucker"
        android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/headingt"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/namet"
        android:textColor="#ffff00a9"
        android:layout_below="@+id/headingt"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffb900ff"
        android:id="@+id/namet1"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_toEndOf="@+id/namet"
        android:layout_below="@+id/headingt"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addresst"
        android:textColor="#ffff00a9"
        android:paddingBottom="10dp"
        android:layout_below="@+id/namet"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addresst1"
        android:paddingBottom="10dp"
        android:textColor="#ffb900ff"
        android:layout_below="@+id/namet"
        android:layout_toEndOf="@+id/addresst"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phonet"
        android:textColor="#ffff00a9"
        android:paddingBottom="10dp"
        android:layout_below="@+id/addresst"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phonet1"
        android:paddingBottom="10dp"
        android:textColor="#ffb900ff"
        android:layout_below="@+id/addresst"
        android:layout_toEndOf="@+id/phonet"
        android:autoLink="phone|all"
        android:clickable="true"
        android:linksClickable="true"
        />
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
